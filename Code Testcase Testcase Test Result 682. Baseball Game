class Solution {
    public int calPoints(String[] operations) {
        Stack<Integer>st=new Stack<>();
            int result=0;
            for(int i=0;i<operations.length;i++){
                String s=operations[i];
                  if(s.equals("C")){
                      st.pop();
                  }else if(s.equals("D")){
                        int k=2*st.peek();
                        st.push(k);

                  }else if(s.equals("+")){
                    int k1=st.pop();
                    int k2=st.peek();
                    st.push(k1);
                    st.push(k1+k2);


                  }else{
                    st.push(Integer.valueOf(s));
                  }
            }for(int num:st){
                result+=num;
                            }return result;
    }
}

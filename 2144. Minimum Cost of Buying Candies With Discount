class Solution {
    public int minimumCost(int[] cost) {
            Arrays.sort(cost);
            int n=cost.length;
            int sum=0;
            int count=1;01
            for(int i=n-1;i>=0;i--){
                sum+=cost[i];
                if(count==2){
                    i-=1;
                    count=0;
                }count+=1;
            }
              return sum;
        }
}

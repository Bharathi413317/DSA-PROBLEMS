class Solution {
    public int minimumDifference(int[] nums, int k) {
        Arrays.sort(nums);
        int n=nums.length;
        int min=Integer.MAX_VALUE;
        int sum=0;
        int l=0;
        for(int r=0;r<n;r++){
             
             if(r-l+1==k){
               int m=nums[r]-nums[l];
               l++;
            
             min=Math.min(min,m);
             }
        }return min;


        
    }
}

//fixed size sliding window

class Main {
    public static void main(String[] args) {
        int k=3;
        int [] arr={1,5,7,2,9};
        int n=arr.length;
        int max=0;
        int sum=0;
        int l=0;
        for(int r=0;r<n;r++){
            sum+=arr[r];
            if(r-l+1==k){
                if(sum>max) max=sum;
                sum-=arr[l];     
                l++;
            }
        }System.out.println(max);
    }
}

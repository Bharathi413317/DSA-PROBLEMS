class Solution {
    public boolean ispossible(int []possible,int m,int k){
        Arrays.sort(possible);
        int prev=possible[0];
        m-=1;
        for(int i=1;i<possible.length;i++){
            int val=possible[i];
            if(val-prev>=k){
                prev=val;
                m-=1;
            }
            if(m<=0){
                return true;
            }
        }return false;

    }
    public int maxDistance(int[] position, int m) {
        int l=1;
        int r=(int)Math.pow(10,9);
        while(l<=r){
            int mid=l+(r-l)/2;
            if(ispossible(position,m,mid)){
                l=mid+1;
            }else{
                r=mid-1;
            }
        }return r;

    }
}           

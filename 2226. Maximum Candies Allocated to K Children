class Solution {
    public boolean ispossible(int []nums,long k,int mid){
        int temp=0;
        for(int i=0;i<nums.length;i++){
                 temp=nums[i]/mid;
                 k-=temp;
                 if(k<=0){
                    return true;
                 }

        }return false;
    }
    public int maximumCandies(int[] candies, long k) {
         int l=1;
         int r=(int)Math.pow(10,7);
         while(l<=r){
            int mid=l+(r-l)/2;
            if(ispossible(candies,k,mid)){
                l=mid+1;
            }else{
                r=mid-1;
            }
         }return r;
    }
}  

class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        
        int n=nums.length;
        int l=0,ans=0,count=0;
        for(int r=0;r<n;r++){
               if(nums[r]==0) count+=1;
               while(count>0){
                if(nums[l]==0) count-=1;
                l++;
               }ans=Math.max(ans,r-l+1);
        }return ans;

    }
}
